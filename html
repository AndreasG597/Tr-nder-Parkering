<body>
    <div class="container">
        <h1>Parkeringshus Overvåking</h1>
        <div class="sensor-data">
            <p>CO₂-nivå: <span id="co2-level">400</span> ppm</p>
            <p>Støynivå: <span id="noise-level">50</span> dB</p>
        </div>
        
        <h2>Parkeringsplasser</h2>
        <div class="parkeringsplass" id="parkeringsplass">
            <!-- Plassene genereres her -->
        </div>

        <button onclick="updateData()">Oppdater Data</button>
    </div>

    <script>
        const parkeringsplass = document.getElementById("parkeringsplass");

        function generateParkingSpots() {
            parkeringsplass.innerHTML = ""; 
            
            // Øvre parkeringsplasser
            for (let i = 1; i <= 4; i++) {
                let plass = document.createElement("div");
                let isOccupied = Math.random() < 0.5;
                plass.className = "plass " + (isOccupied ? "opptatt" : "ledig");
                plass.innerText = isOccupied ? "Opptatt" : "Ledig";
                parkeringsplass.appendChild(plass);
            }

            // Innkjøring (grå stripe i midten)
            let innkjoring = document.createElement("div");
            innkjoring.className = "innkjoring";
            innkjoring.innerText = "Innkjøring";
            parkeringsplass.appendChild(innkjoring);

            // Nedre parkeringsplasser
            for (let i = 1; i <= 4; i++) {
                let plass = document.createElement("div");
                let isOccupied = Math.random() < 0.5;
                plass.className = "plass " + (isOccupied ? "opptatt" : "ledig");
                plass.innerText = isOccupied ? "Opptatt" : "Ledig";
                parkeringsplass.appendChild(plass);
            }
        }

        function updateData() {
            document.getElementById("co2-level").innerText = (400 + Math.floor(Math.random() * 100)).toString();
            document.getElementById("noise-level").innerText = (50 + Math.floor(Math.random() * 10)).toString();
            generateParkingSpots();
        }

        // Initial lastning
        generateParkingSpots();
    </script>
</body>
